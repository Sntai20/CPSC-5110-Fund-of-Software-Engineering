@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileArticleService ArticleService
@model ContosoCrafts.WebSite.Pages.Article.UpdateModel

@{
    if (Model.Article.Title == "Default title")
    {
        <h1>CREATE</h1>
        ViewData["Title"] = "Create Page";
    }

    if (Model.Article.Title != "Default title")
    {
        <h1>UPDATE</h1>
        ViewData["Title"] = "Update Page";
    }
}

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Article.Id)

        <div class="row">
            <div class="form-group">
                <label asp-for="Article.Title" class="control-label" style="width:700px"></label>
                <input asp-for="Article.Title" class="form-control" />
                <span asp-validation-for="Article.Title" class="text-danger"></span>
            </div>

            &nbsp;
            &nbsp;
            &nbsp;
            &nbsp;

            <div class="form-group">
                <label asp-for="Article.Author" class="control-label"></label>
                <input asp-for="Article.Author" class="form-control" style="width:300px" />
                <span asp-validation-for="Article.Author" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="Article.Description" class="control-label"></label>
                <textarea asp-for="Article.Description" class="form-control" style="width:1028px"></textarea>
                <span asp-validation-for="Article.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="Article.Id" class="control-label"></label>
                <input asp-for="Article.Id" class="form-control" style="width:700px" />
                <span asp-validation-for="Article.Id" class="text-danger"></span>
            </div>

            &nbsp;
            &nbsp;
            &nbsp;
            &nbsp;

            <div class="form-group">
                <label asp-for="Article.PublishDate" class="control-label"></label>
                <input asp-for="Article.PublishDate" class="form-control" style="width:300px" />
                <span asp-validation-for="Article.PublishDate" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="Article.Image" class="control-label"></label>
                <input asp-for="Article.Image" class="form-control" style="width:1028px" />
                <span asp-validation-for="Article.Image" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="Article.Url" class="control-label"></label>
                <input asp-for="Article.Url" class="form-control" style="width:1028px" />
                <span asp-validation-for="Article.Url" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
