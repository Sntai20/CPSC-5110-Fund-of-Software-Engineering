@page
@model ContosoCrafts.WebSite.Pages.Article.IndexModel
@{
    ViewData["Title"] = "Index page";
}

<div class="container">
    <a asp-page="Create" class="btn btn-link">+ Create</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model.Articles)
            {
                <tr>
                    <td>@article.Title</td>
                    <td>@article.Author</td>
                    <td><a asp-page="Read" asp-route-id="@article.Id">Read</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>