@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileArticleService ProductService
@model ContosoCrafts.WebSite.Pages.Article.DeleteModel

@{
    ViewData["Title"] = "Delete page";
}


<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Article.Id)

        <div class="form-group">
            <label asp-for="Article.Title" class="control-label"></label>
            <input asp-for="Article.Title" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Article.Description" class="control-label"></label>
            <input asp-for="Article.Description" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Article.ArticleType" class="control-label"></label>
            <input asp-for="Article.ArticleType" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Article.Url" class="control-label"></label>
            <input asp-for="Article.Url" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Article.Image" class="control-label"></label>
            <input asp-for="Article.Image" class="form-control" disabled />
        </div>

        <h1>Confirm Delete of this item</h1>
        <style>
            body {
                background-color: peachpuff;
            }
            h1{
                font-family: "Brush Script MT ",Lucida Handwriting,Cursive;
            }

            input[type=text] {
                width: 100%;
                padding: 12px 20px;
                margin: 8px 0;
                box-sizing: border-box;
                font-family: "Brush Script MT ",Lucida Handwriting,Cursive;
            }

            }
        </style>

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}