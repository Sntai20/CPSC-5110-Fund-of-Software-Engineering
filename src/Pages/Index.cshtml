@page
@using ContosoCrafts.WebSite.Components
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h3>The biscuits may be undercooked, but the articles are spot on.</h3>
<style>
    h3{
    font-family: "Brush Script MT ",Lucida Handwriting,Cursive;
        font-size: 30px;
    }
        body{
        background-color: peachpuff;
    }
    }
</style>



<div id="mycarousel" class="carousel slide" data-ride="carousel" style="margin-top:-15px">

    <ol class="carousel-indicator">
        <li data-target="#mycarousel" data-slide-to="0" ></li
        <li data-target="#mycarousel" data-slide-to="1" class="active"></li
        <li data-target="#mycarousel" data-slide-to="2"></li
    </ol>

    <div class="carousel-inner" role="listbox">
        <div class="item">
            <img src="~/Content/Images/music.jpg" />
            <div class="carousel-caption">
                <p>Image 0</p>
            </div>
        </div>

        <div class="item" active>
            <img src="~/Content/Images/training.jpg" />
            <div class="carousel-caption">
                <p>Image 1</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/website.jpg" />
            <div class="carousel-caption">
                <p>Image 2</p>
            </div>
        </div>
    </div>

    <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>

    <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>



</div>
@(await Html.RenderComponentAsync<ArticleList>(RenderMode.ServerPrerendered))

<script src="_framework/blazor.server.js"></script>